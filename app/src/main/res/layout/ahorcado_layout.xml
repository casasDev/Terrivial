<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/palabro"
        android:layout_width="218dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="-216dp"
        android:layout_marginBottom="-138dp"
        android:text="TextView" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLetras"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/palabro"
        android:layout_alignEnd="@+id/palabro"
        android:layout_alignBottom="@+id/palabro"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="-83dp"
        android:layout_marginBottom="-397dp">

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/listaNegra"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/palabro"
        android:layout_alignTop="@+id/gridLetras"
        android:layout_alignEnd="@+id/palabro"
        android:layout_alignBottom="@+id/gridLetras"
        android:layout_marginStart="-58dp"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-109dp"
        android:text="TextView" />
</RelativeLayout>